{
  "compilerOptions": {
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    // "allowImportingTsExtensions": true, // REMOVIDA: Opção não suportada
    "moduleResolution": "node", // CORRIGIDO: Usando "node" em vez de "bundler"
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/*"] // CORRIGIDO: Caminho para a pasta shared
    }
  },
  "include": ["src", "../shared"], // CORRIGIDO: Caminho para a pasta shared
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"]
}
